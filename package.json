{
  "name": "qr-watch",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev-client": "yarn workspace @qr-watch/client run dev",
    "dev-server": "yarn workspace @qr-watch/server run dev",
    "dev": "concurrently -n client,server -c magenta,green \"yarn:dev-client\" \"yarn:dev-server\"",
    "build": "yarn workspaces run build",
    "postbuild": "pkg ."
  },
  "bin": "./packages/server/dist/server.js",
  "pkg": {
    "scripts": "./packages/server/dist/**/*.js",
    "assets": "./packages/client/dist/**/*",
    "outputPath": "./build"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "pkg": "^5.5.1"
  }
}
